    "version": "0.2.0",
    "configurations": [
        {
            "name": "LÖVE2D Debug in VSCode",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "lovec",
            },
            "args": [
                "${workspaceFolder}/source"
            ]
        },
        {
            "name": "LÖVE2D Debug in PowerShell",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/run.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "LÖVE2D Build and Run",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/build-and-run.ps1",
            "cwd": "${workspaceFolder}"
        },
    ]
}